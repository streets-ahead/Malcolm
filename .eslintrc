{
  parser: "babel-eslint",
  plugins: [
    "react"
  ],
  parserOptions: {
    sourceType: "module",
    ecmaVersion: 6,
    ecmaFeatures: {
      jsx: true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "globals": {
    "Map": true,
    "Promise": true
  },
  extends: "eslint:recommended",
  "rules": {
    no-console: 0,
    arrow-spacing: 2,
    no-unused-vars: [2, { "args": "none" }],
    semi: [2, "always"],
    "react/jsx-no-undef": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
  }
}
